<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
<!-- Hibernate session factory -->
<bean id="sessionFactory" 
class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
 
    <property name="dataSource">
      <ref bean="dataSource"/>
    </property>
 
 	
 
    <property name="hibernateProperties">
       <props>
         <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
         <prop key="hibernate.show_sql">true</prop>
         <prop key="hibernate.hbm2ddl.auto">update</prop>
       </props>
    </property>
 
    <property name="annotatedClasses">
	<list>
		<value>com.mortenporten.dugnad.core.persistence.Person</value>
		<value>com.mortenporten.dugnad.core.persistence.Festival</value>
		<value>com.mortenporten.dugnad.core.persistence.Duty</value>
		<value>com.mortenporten.dugnad.core.persistence.Ticket</value>
		<value>com.mortenporten.dugnad.core.persistence.Association</value>
	</list>
    </property>
 
    </bean>
</beans>